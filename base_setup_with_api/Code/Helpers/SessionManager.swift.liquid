import Foundation

class SessionManager {
    
    private var store: AccessTokenStore
    
    init(store: AccessTokenStore = SessionTokenStore.shared) {
        self.store = store
    }
    
    func set(token: AccessToken) { store.token = token }
    
    func retrieveToken() -> AccessToken? { store.token }
    
    func removeToken() { store.token = nil }
    
    func hasToken() -> Bool { store.token != nil }
}