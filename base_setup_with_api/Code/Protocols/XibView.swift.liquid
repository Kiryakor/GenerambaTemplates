import Rswift

protocol XibView where Self: UIView {
    var xibView: UIView! { get set }
}

extension XibView {
    
    func xibSetup(nib: NibResourceType) {
        xibView = nib.instantiate(withOwner: self, options: nil).first as? UIView
        xibView.frame = bounds
        xibView.autoresizingMask = [.flexibleHeight, .flexibleWidth]
        addSubview(xibView)
    }
}